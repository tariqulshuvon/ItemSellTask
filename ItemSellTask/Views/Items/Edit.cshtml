@model ItemSellTask.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row mt-5">
    <div class="col-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Item Name</label>
                        <div class="col-md-7">
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Item Description</label>
                        <div class="col-md-7">
                            <input asp-for="ItemDescription" class="form-control" />
                            <span asp-validation-for="ItemDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Item Price</label>
                        <div class="col-md-7">
                            <input asp-for="ItemPrice" class="form-control" />
                            <span asp-validation-for="ItemPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Item Count</label>
                        <div class="col-md-7">
                            <input asp-for="ItemCount" class="form-control" />
                            <span asp-validation-for="ItemCount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Category</label>
                        <div class="col-md-7">
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <input type="hidden" asp-for="Id" />
                    </div>

                    <div class="form-group row">
                        <div class="col-md-9 offset-md-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
