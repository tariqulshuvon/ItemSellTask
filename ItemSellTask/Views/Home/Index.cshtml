@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Categories</h4>
            </div>
            <div class="card-body">
                <p class="card-text">Manage your categories here.</p>
                <a asp-action="Index" asp-controller="Categories" class="btn btn-primary">Go to Categories</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Items</h4>
            </div>
            <div class="card-body">
                <p class="card-text">Manage your items here.</p>
                <a asp-action="Index" asp-controller="Items" class="btn btn-primary">Go to Items</a>
            </div>
        </div>
    </div>
</div>
